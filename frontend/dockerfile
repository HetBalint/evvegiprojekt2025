# Stage 1: Build the React app
FROM node:18 AS builder

# Set working directory
WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# Copy the entire project files into the container
COPY . .

# Build the React app (this generates the 'build' folder)
RUN npm run build

# Stage 2: Serve the app using Node.js (using 'serve' package)
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install serve package globally to serve the build folder
RUN npm install -g serve

# Copy the build folder from the builder stage
COPY --from=builder /app/build /app/build

# Expose port 3000
EXPOSE 3000

# Start the app with 'serve' to serve the production build
CMD ["serve", "-s", "build", "-l", "3000"]
